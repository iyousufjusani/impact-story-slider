{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "create-block/impact-story-slider",
	"version": "0.1.0",
	"title": "Impact Story Slider",
	"category": "widgets",
	"icon": "slides",
	"description": "Image Story Slider - Reusable impact story slider with media, text styling, and directional control slides with parallax",
	"example": {},
	"attributes": {
		"numSlides": { "type": "number", "default": 3 },
		"slideDirection": { "type": "string", "default": "left" },
		"showHeaders": { "type": "boolean", "default": true },
		"slides": { "type": "array", "default": [] },
		"mediaURL": { "type": "string" },
		"mediaID": { "type": "number" },
		"text": { "type": "string" },
		"fontSize": { "type": "number", "default": 18 },
		"textColor": { "type": "string" },
		"backgroundColor": { "type": "string" },
		"heading": { "type": "string" },
		"isFullWidth": { "type": "boolean", "default": false }
	},
	"supports": {
		"align": true,
		"color": {
			"text": true,
			"background": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		},
		"html": false
	},
	"textdomain": "impact-story-slider",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
